{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,

    "outDir": ".bin",
    "sourceMap": false,
    "module": "commonjs",
    "target": "es6",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": [
    // "./src/**/*",
    "./bin"
  ],
  "exclude": [
    "node_modules"
  ]
}
